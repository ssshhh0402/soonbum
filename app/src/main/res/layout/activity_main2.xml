<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".MainActivity2"
    android:background="#ffffff">



    <include
        layout="@layout/content_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


   <android.support.design.widget.NavigationView
       android:id="@+id/nav_view"
       android:visibility="visible"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:layout_gravity="start"
       android:background="#ff6f66"
       app:headerLayout="@layout/header_main"
       app:menu="@menu/nav_menu"
       app:itemTextColor="#ffffff"
       app:itemTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
       >

       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <View
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:background="#ffffff"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHeight_percent="0.12"
               app:layout_constraintHorizontal_bias="0.12"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.95"
               app:layout_constraintWidth_percent="0.015" />

           <TextView
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:text="(주)성창시스템"
               android:textColor="#ffffff"
               android:textSize="9sp"
               android:textStyle="bold"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHeight_percent="0.025"
               app:layout_constraintHorizontal_bias="0.37"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.86"
               app:layout_constraintWidth_percent="0.5" />
           <TextView
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:text="인천시 부평구 부평대로 283 C동 906호"
               android:textColor="#ffffff"
               android:textSize="9sp"
               android:textStyle="bold"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHeight_percent="0.025"
               app:layout_constraintHorizontal_bias="0.923"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.89"
               app:layout_constraintWidth_percent="0.8"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:text="TEL:032)623-6444"
               android:textColor="#ffffff"
               android:textSize="9sp"
               android:textStyle="bold"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHeight_percent="0.025"
               app:layout_constraintHorizontal_bias="0.37"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.92"
               app:layout_constraintWidth_percent="0.5"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="0dp"
               android:text="FAX:032)623-6448"
               android:textColor="#ffffff"
               android:textSize="9sp"
               android:textStyle="bold"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHeight_percent="0.025"
               app:layout_constraintHorizontal_bias="0.37"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.95"
               app:layout_constraintWidth_percent="0.5"/>
       </android.support.constraint.ConstraintLayout>

   </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>